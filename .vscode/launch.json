{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Email Service",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build-email-service",
        "program": "${workspaceFolder}/backend/microservices/email-service/bin/Debug/net8.0/email-service.dll",
        "args": [],
        "cwd": "${workspaceFolder}/backend/microservices/email-service",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development",
          "ASPNETCORE_URLS": "http://localhost:5255"
        },
        "sourceFileMap": {
          "/Views": "${workspaceFolder}/backend/microservices/email-service/Views"
        }
      },
      {
        "name": "User Service",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build-user-service",
        "program": "${workspaceFolder}/backend/microservices/user-service/bin/Debug/net8.0/user-service.dll",
        "args": [],
        "cwd": "${workspaceFolder}/backend/microservices/user-service",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development",
          "ASPNETCORE_URLS": "http://localhost:5277"
        },
        "justMyCode": false,
        "sourceFileMap": {
          "/Views": "${workspaceFolder}/backend/microservices/user-service/Views"
        }
      },
      {
        "name": "Strapi Service",
        "type": "node",
        "request": "launch",
        "preLaunchTask": "build-strapi-service",
        "program": "${workspaceFolder}/backend/microservices/strapi-cms-service/node_modules/strapi/bin/strapi.js", // Path to Strapi's CLI entry point
        "cwd": "${workspaceFolder}/backend/microservices/strapi-cms-service",
        "env": {
          "NODE_ENV": "development"
        },
        "runtimeArgs": ["--inspect"], // Optional: for debugging
        "outFiles": ["${workspaceFolder}/backend/microservices/strapi-cms-service/**/*.js"],
        "console": "integratedTerminal"
      },
      {
        "name": "API Gateway",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build-api-gateway",
        "program": "${workspaceFolder}/api-gateway/bin/Debug/net8.0/api-gateway.dll", // Adjust the path if necessary
        "args": [],
        "cwd": "${workspaceFolder}/api-gateway",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development",
          "ASPNETCORE_URLS": "http://localhost:8080"
        },
        "sourceFileMap": {
          "/Views": "${workspaceFolder}/api-gateway/Views"
        },
        "justMyCode": false
      }
    ],
    "compounds": [
      {
        "name": "Debug All Services",
        "configurations": [
          "Email Service",
          "User Service",
          "API Gateway"
        ]
      }
    ]
  }
  